{% extends 'base.html.twig' %}

{% block body %}
    <div class="big-pic" style="background-image: url('{{ asset('contact_page.jpg') }}')"></div>

    <div class="container mb-5">
        <h2 class="text-center my-80">Contacts</h2>
        <div class="row">
            <div class="col-md-5 my-5">
                <p> If you want a catalog of the available pieces or to make an order or just a friendly conversation please contact me.</p>
                <p>&nbsp;</p>
                <p>light@adrislight.com</p>
                <p>+359 886 000 324</p>
                <p>&nbsp;</p>
                <a href="https://www.facebook.com/adrislight" target="_blank"> <img src="{{ asset('facebook.svg') }}"></a>&emsp;
                <a href="https://www.pinterest.com/adrianaboyadjieva" target="_blank"><img src="{{ asset('pinterest.svg') }}"></a> &emsp;
                <a href="https://www.instagram.com/adrianaboyadjieva" target="_blank"><img src="{{ asset('instagram.svg') }}"></a> &emsp;
            </div>
            <div class="col-md-1"></div>

            <div class="col-md-6 my-5">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_widget(form) }}
                <p class="text-right">
                    <button class="btn btn-outline-light" type="submit">Send</button>
                </p>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}

{% block title %}{{ parent() }} - Contacts{% endblock %}

