{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}
    <div class="container mb-5">
        <h2 class="text-center my-5">Projects</h2>
        <div class="row">

            {% for project in projects %}
                <div class="col-md-6">
                    <a href="{{ path('projectName', {'id': project.id}) }}">
                        <div class="square mx-5 my-5 align-items-end" style="background-image: url('/{{ projectDir }}/{{ project.image }}')">
                            <div class="content">
                                <h3>{{ project.title }}</h3>
                                <h4>{{ project.year }}</h4>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}

