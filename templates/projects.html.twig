{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Projects{% endblock %}

{% block body %}
    <div class="big-pic" style="background-image: url('{{ asset('project_page.jpg') }}')"></div>

    <div class="container mb-5">
        <h2 class="text-center my-80">Projects</h2>
        <div class="row">

            {% for project in projects %}
                <div class="col-md-4">
                    <a href="{{ path('projectName', {'id': project.id}) }}">
                        <div class="square mx-1 my-3 align-items-end" style="background-image: url('/{{ projectDir }}/{{ project.image }}')">
                            <div class="content">
                                <h3>{{ project.title }}</h3>
                                <h4>{{ project.year }}</h4>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}

